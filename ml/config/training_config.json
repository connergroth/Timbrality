{
  "million_song_dataset_path": "data/million_song_subset",
  "timbrality_data_path": "data/timbrality",
  "lastfm_scrobbles_path": "data/lastfm_scrobbles",
  "output_dir": "models",
  
  "audio_predictor": {
    "vocab_size": 20000,
    "embedding_dim": 128,
    "hidden_dims": [512, 256, 128],
    "dropout_rate": 0.3,
    "num_genres": 1000,
    "num_moods": 500,
    "learning_rate": 0.001,
    "weight_decay": 0.0001,
    "epochs": 50,
    "batch_size": 32
  },
  
  "two_tower": {
    "text_model": "sentence-transformers/all-MiniLM-L6-v2",
    "embedding_dim": 64,
    "text_dim": 384,
    "learning_rate": 0.001,
    "weight_decay": 0.0001,
    "epochs": 20,
    "batch_size": 64
  },
  
  "hybrid": {
    "fusion_method": "meta_learning",
    "cf_weight": 0.6,
    "content_weight": 0.4,
    "embedding_dim": 64,
    "enable_meta_learning": true,
    "session_feature_dim": 18,
    "meta_hidden_dim": 128,
    "num_meta_layers": 3,
    "min_ratings_for_acclaim": 100,
    "high_acclaim_threshold": 500
  },
  
  "nmf_components": 100,
  "nmf_max_iter": 200,
  "nmf_tol": 0.0001,
  
  "training": {
    "train_split": 0.8,
    "val_split": 0.1,
    "test_split": 0.1,
    "random_seed": 42
  },
  
  "session_processing": {
    "session_gap_minutes": 30,
    "min_session_tracks": 3,
    "skip_threshold_seconds": 30
  }
}
